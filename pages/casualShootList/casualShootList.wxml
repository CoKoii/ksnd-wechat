<view class="casual-shoot-list-page">
  <view class="tabs">
    <view
      class="tab-item {{activeTab === index ? 'active' : ''}}"
      wx:for="{{tabs}}"
      wx:key="index"
      data-index="{{index}}"
      bindtap="onTabChange">
      {{item}}
    </view>
  </view>

  <view class="search-bar">
    <input
      class="search-input"
      value="{{searchValue}}"
      placeholder="搜索描述"
      placeholder-class="search-placeholder"
      confirm-type="search"
      bindinput="onSearchInput"
      bindconfirm="onSearchConfirm" />
    <view class="search-action" bindtap="onSearchTap">搜索</view>
    <view class="search-reset" wx:if="{{keyword}}" bindtap="onSearchReset">重置</view>
  </view>

  <scroll-view class="scroll-container" scroll-y>
    <view class="record-list">
      <view class="record-item" wx:for="{{list}}" wx:key="id" data-id="{{item.id}}" data-task="{{item.task || ''}}" bindtap="goToDetail">
        <view class="record-header">
          <text class="record-title">{{item.firstDescription}}</text>
        </view>

        <view class="record-footer">
          <text class="footer-text">记录项：{{item.itemCount}}</text>
          <text class="footer-text">照片：{{item.imageCount}}</text>
          <text class="footer-text">{{item.createdAtText}}</text>
        </view>
      </view>
    </view>

    <view class="empty" wx:if="{{list.length === 0}}">
      <text>暂无随手拍记录</text>
    </view>
  </scroll-view>

  <button class="fab-add" bindtap="goToCreate">+ 新增</button>
</view>
